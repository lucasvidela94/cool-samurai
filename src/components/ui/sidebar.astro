<style>
    #sidebar {
        width: 240px;
        grid-column: 1 / 2;
        height: 100vh;
        position: fixed;
        border-right: 1px dotted rgba(255, 255, 255, 0.3);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        color: #ffffff;
        padding: 20px 0;
    }

    .sidebar_logo {
        display: flex;
        height: 100px;
        justify-content: center;
        align-items: center;
        padding: 2.7px 20px;
        border-bottom: 1px dotted rgba(255, 255, 255, 0.3);
    }

    .sidebar_logo-svg {
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        margin: auto;
        width: 64px;
    }

    .sidebar_routes {
        height: 100%;
        display: flex;
        flex-direction: column;
        gap: 25px;
        margin-top: 20px;
        padding: 30px 20px;
    }

    .sidebar_routes a {
        color: #e2e8f0;
        text-decoration: none;
        font-size: 16px;
        font-weight: 600;
        transition: color 0.3s ease;
    }

    .sidebar_routes a:hover {
        color: #ffffff;
    }

    .sidebar_links {
        padding: 30px 20px;
        border-top: 1px dotted rgba(255, 255, 255, 0.3);
        display: flex;
        justify-content: space-between;
    }

    .sidebar_links a {
        color: #ffffff;
        transition: color 0.3s ease;
    }

    .sidebar_links a:hover {
        color: #51f2cb;
    }

    @media (max-width: 768px) {
        #sidebar {
            width: 100%;
            height: auto;
            position: sticky;
            border-right: none;
            border-bottom: 1px dotted rgba(255, 255, 255, 0.3);
            padding: 10px 0;
        }

        .sidebar_logo {
            display: none;
        }

        .sidebar_routes {
            flex-direction: row;
            gap: 20px;
            padding: 10px 20px;
        }

        .sidebar_links {
            padding: 10px 20px;
            border-top: none;
            justify-content: center;
            gap: 20px;
        }
    }
</style>
